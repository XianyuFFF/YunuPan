<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lfkdsk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.logn.yunupan.views.TitleBarView.TitleBar
        android:id="@+id/record_title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f5f5f5"
        lfkdsk:leftButtonBackground="@mipmap/icon_scan"
        lfkdsk:rightButtonBackground="@mipmap/icon_upload_cloud"
        lfkdsk:titleBarColor="#333333"
        lfkdsk:titleBarText="@string/app_record">

    </com.logn.yunupan.views.TitleBarView.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd">

        <TextView
            android:id="@+id/record_show_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="你还未上传过文件哦\n快来试试上传功能吧"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/record_show_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
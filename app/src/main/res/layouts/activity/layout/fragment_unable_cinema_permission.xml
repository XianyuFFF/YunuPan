<?xml version="1.0" encoding="utf-8"?>
<com.logn.yunupan.module.PercenterLayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lfkdsk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/permission_apply_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:src="@mipmap/privateguide_photoalbumgrant"
        lfkdsk:layout_heightPercent="15%h"
        lfkdsk:layout_widthPercent="80%w" />

    <ImageView
        android:id="@+id/permission_apply_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@mipmap/privateguide_alert"
        lfkdsk:layout_heightPercent="25%h"
        lfkdsk:layout_widthPercent="80%w" />

    <Button
        android:id="@+id/permission_apply_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@color/permission_button_normal"
        android:text="好的"
        android:textColor="@color/white"
        android:textSize="16dp"
        lfkdsk:layout_heightPercent="8%h"
        lfkdsk:layout_widthPercent="60%w" />
</com.logn.yunupan.module.PercenterLayout.PercentLinearLayout>